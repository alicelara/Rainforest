<h1>Products - <%= @products.length %> products  </h1>

<div> 
	<% @products.each do |product| %>
	<p>Name: <%= product[:name] %>
	<p>Description: <%= product[:description]%></p>
	<p>Price: <%= product[:price_in_cents] %></p>

	<%= link_to "show product", "products/#{product.id}" %>
	<% end %>
</div>
